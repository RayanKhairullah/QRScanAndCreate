<resources>
    <!-- Icon-only button style -->
    <style name="Widget.MaterialComponents.Button.IconButton"
        parent="Widget.MaterialComponents.Button.TextButton">
        <!-- Remove all insets so the view wraps tightly around the icon -->
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <!-- No background, just ripple on press -->
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <!-- Icon padding & gravity -->
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    </style>
    <style name="Widget.App.Button.Filled" parent="Widget.MaterialComponents.Button">
    </style>
    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Warna M3 -->
        <item name="colorPrimaryContainer">@color/primary_container</item>
        <item name="colorOnPrimaryContainer">@color/on_primary_container</item>
        <!-- Terapkan shape besar pada komponen -->
        <item name="shapeAppearanceCornerLarge">@style/ShapeAppearance.App.Corner.Large</item>
    </style>

    <style name="ShapeAppearance.App.Corner.Large" parent="ShapeAppearance.Material3.Corner.Large">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>
</resources>
