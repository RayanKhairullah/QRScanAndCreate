<resources>
    <!-- Icon-only button style -->
    <style name="Widget.MaterialComponents.Button.IconButton"
        parent="Widget.MaterialComponents.Button.TextButton">
        <!-- Remove all insets so the view wraps tightly around the icon -->
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <!-- No background, just ripple on press -->
        <item name="backgroundTint">@null</item>
        <item name="rippleColor">?attr/colorControlHighlight</item>
        <!-- Icon padding & gravity -->
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>
</resources>
